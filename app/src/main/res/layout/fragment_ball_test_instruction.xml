<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    tools:context=".activities.ball.BallTestInstructionFragment"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_test_instruction_1"
        android:paddingBottom="16dp"
        android:textSize="18sp"
        android:textColor="@color/mp_color_primary_dark" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/instruction_camera_1"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <com.example.phl.views.MyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:group="start"
        android:id="@+id/start"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:padding="12dp" />
</LinearLayout>
