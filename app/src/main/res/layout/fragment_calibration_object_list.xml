<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView_needed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_data_points_needed" android:textSize="24sp"
        android:textColor="@color/mp_color_primary_dark"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" android:textSize="24sp"
        android:textColor="@color/mp_color_primary_dark"/>

    <LinearLayout
        android:id="@+id/weight_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.phl.views.MyButton
            android:id="@+id/add_new_object_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/calibrate_with_another_object"
            android:layout_weight="1"
            android:textSize="24sp"
            app:group="no"/>

        <com.example.phl.views.MyButton
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/next"
            android:textSize="24sp"
            app:group="yes"
            />
    </LinearLayout>


</LinearLayout>

